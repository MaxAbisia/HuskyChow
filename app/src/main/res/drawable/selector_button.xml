<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!--  Non focused states
         -->
        <item android:state_activated="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/select_button_unselected" />
        <item android:state_activated="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/select_button_unselected" />
        <!--  Focused states
         -->
        <item android:state_activated="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/select_button_selected" />
        <item android:state_activated="true" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/select_button_selected" />
        <!--  Pressed
         -->
        <item android:state_pressed="true" android:drawable="@drawable/select_button_press" />
</selector>